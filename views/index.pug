extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Portfolio Project Showcase

      p.lead.text-light
        | This portfolio is meant to demonstrate my skills and growth as a Full Stack JavaScript Developer. The portfolio website itself is a project piece!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell.project-tile
          a(href= `/project/${project.id}`)
            img.thumbnail(src=`/static/images/${project.landing_image}`)
            h5= project.project_name
